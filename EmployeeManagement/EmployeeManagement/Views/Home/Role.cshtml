@model IEnumerable<EmployeeManagement.ROLE>

@{
    ViewBag.Title = "Role";
}

<h2>Role @Session["email"] + @Session["eid"] + @Session["role"] </h2>

<p>
    @Html.ActionLink("Create New", "CreateRole")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.role_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.role_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditRole", new { id=item.role_ID }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.role_ID }) |*@
            @Html.ActionLink("Delete", "DeleteRole", new { id=item.role_ID })
        </td>
    </tr>
}

</table>
