@model EmployeeMgtCore.Team

@{
    ViewData["Title"] = "EditTeamDetails";
}

<h1>EditTeamDetails</h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTeamDetails">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group d-none">
                <label asp-for="TeamId" class="control-label"></label>
                <input asp-for="TeamId" class="form-control" />
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teamname" class="control-label"></label>
                <input asp-for="Teamname" class="form-control" />
                <span asp-validation-for="Teamname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManagerId" class="control-label"></label>
                @*<input asp-for="ManagerId" class="form-control" />*@
                <select asp-for="ManagerId" class="form-control form-select" asp-items="@ViewBag.managerlistname"></select>
                <span asp-validation-for="ManagerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update Team Details" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

