    ViewData["Title"] = "PromoteEmployee";
}

<h1>PromoteEmployee</h1>

<h3>Are you sure you want to promote this employee?</h3>
<div>
    @*<h4>PromotionModel</h4>*@
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 d-none">
            @Html.DisplayNameFor(model => model.empID)
        </dt>
        <dd class = "col-sm-10 d-none">
            @Html.DisplayFor(model => model.empID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.empname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.empname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.phonenum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.phonenum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.rolename)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.rolename)
